{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": ".", // Important: '.' relative to tsconfig.json location
    "sourceMap": true,
    "baseUrl": ".", // Important: '.' relative to tsconfig.json location
    "paths": {
      "@/*": ["./*"] // Important: './*' relative to baseUrl
    }
  },
  "include": ["./**/*"], // Important: './**/*' relative to tsconfig.json location
  "exclude": ["node_modules", "dist"]
}